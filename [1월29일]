package number;

public class Number6 {

	public static void main(String args[]) {
		// 문제2. 숫자사각형 3
		// 입력된 수만큼 N행 N열의 형태로 출력
		// ex    1  5   9  13
		// 		 2  6  10  14 
		// 		 3  7  11  15
		// 		 4  8  12  16
		int num = 4;
		int result = 0;
		
		for(int i = 1; i<=num;i++) {
			for(int j = 0; j<num;j++) {
				System.out.print(j*num+i+" ");
			}
			System.out.println();
		}
	}
}
